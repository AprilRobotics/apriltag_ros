<launch>
  <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
  <arg name="node_namespace" default="apriltags2_ros_continuous_node" />
  <arg name="camera_name" default="/ptgrey_node/cam0" />
  <arg name="image_topic" default="image_raw" /> 

  <!-- Set parameters -->
  <rosparam command="load" file="$(find apriltags2_ros)/config/settings.yaml" ns="$(arg node_namespace)" />
  <rosparam command="load" file="$(find apriltags2_ros)/config/tags.yaml" ns="$(arg node_namespace)" />
  
  
  <node pkg="apriltags2_ros" type="apriltags2_ros_continuous_node" name="$(arg node_namespace)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >
    <!-- Remap topics from those used in code to those on the ROS network -->
    <remap from="image" to="/ptgrey_node/cam0/image_raw"/>
    <remap from="camera_info" to="/ptgrey_node/cam0/camera_info" />
    
    <param name="undistortInputImage" type="bool" value="true" />
    <param name="cameraDistortionModel" type="str" value="radtan" /> #radtan or equidistant
    
    <param name="camera_frame" type="str" value="blackfly_camera" />
    <param name="remove_duplicates" type="bool" value="true" />
    <param name="publish_tag_detections_image" type="bool" value="true" />      <!-- default: false -->
  </node>
</launch>